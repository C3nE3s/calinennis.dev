---
export interface Props {
  content: {
    title: string;
    subtitle: string;
    createdAt: string;
    description: string;
  };
}
import Layout from './Layout.astro';
import PostHeader from '../components/PostHeader.astro';
import { Icon } from 'astro-icon';

const { description, title, createdAt } = Astro.props.content;
---

<Layout {title} {description}>
  <article
    class='mt-[48px] bg-white/30 backdrop-blur-lg px-4 py-6 rounded-md border-2 border-zinc-300'
  >
    <PostHeader {title} date={createdAt} />
    <div class='pt-4 prose-sm prose-ul:list-disc'>
      <slot></slot>
    </div>
    <div class='pt-3 w-fit'>
      <a
        href='/writing'
        class='flex gap-1 p-2 rounded-md text-zinc-600 bg-zinc-200/30 hover:underline hover:bg-zinc-200 hover:text-zinc-900 hover:scale-105'
      >
        <Icon class='h-6 w-6' pack='system-uicons' name='chevron-left-circle'
        /><span> Back</span>
      </a>
    </div>
  </article>
</Layout>
