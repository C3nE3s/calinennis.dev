---
import Toolbar from '../components/Toolbar.astro';

export interface Props {
  title?: string;
  desription?: string;
  ogImageSource?: string;
}

const fallbackDescription =
  'I consult and develop software for the modern web. I specialize in Javascript and front-end technologies. This site acts as my personal blog and portfolio.';

const { title, description, ogImageSource } = Astro.props;
---

<html lang="en">
  <head>
    <script>
      const root = document.documentElement;
      if (
        window.localStorage.theme === 'dark' ||
        (!('theme' in window.localStorage) &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        root.setAttribute('data-theme', 'dark');
        if (!('theme' in window.localStorage)) {
          window.localStorage.theme = 'dark';
        }
      } else {
        root.setAttribute('data-theme', 'light');
        if (!('theme' in window.localStorage)) {
          window.localStorage.theme = 'light';
        }
      }
      window.addEventListener('storage', () => {
        const theme = localStorage.getItem('theme');
        root.setAttribute('data-theme', theme);
      });
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script
      defer
      data-domain="calinennis.dev"
      src="https://plausible.io/js/plausible.js"></script>
    <title>{title ? title + ' - calinennis.dev' : 'calinennis.dev'}</title>
    <meta name="title" content={title ? title : 'calinennis.dev'} />
    <meta name="description" content={description ?? fallbackDescription} />

    <!-- RSS -->
    <!-- <link rel="alternate" type="application/rss+xml" href="/feed/posts.xml"> -->

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description ?? fallbackDescription}
    />
    {ogImageSource && (<meta property="og:image" content={ogImageSource}>)}

    <!-- Twitter -->
    <meta
      name="twitter:card"
      content={ogImageSource ? 'summary_large_image' : 'summary'}
    />
    <meta name="twitter:site" content="@calin_ennis" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description ?? fallbackDescription}
    />
    {ogImageSource && (<meta name="twitter:image" content={ogImageSource}>)}
  </head>
  <body>
    <Toolbar />
    <main>
      <slot />
    </main>
  </body>
</html>

<style lang="scss" is:global>
  @import '../styles/global.css';
  body {
    font-family: var(--font-sans);
    font-weight: var(--font-weight-3);
    background-color: var(--neutral-1);
    color: var(--neutral-12);
  }

  main {
    height: calc(100vh - 5rem);
    max-width: var(--max-screen-width);
    margin: 0 auto;
    padding: 0;
    position: relative;
    overflow-x: hidden;
    overflow-y: scroll;
  }

  main::-webkit-scrollbar {
    background: transparent;
    width: 4px;
  }

  main::-webkit-scrollbar-thumb {
    background: linear-gradient(
      to top,
      var(--neutral-1),
      var(--neutral-2),
      var(--neutral-1) 99%
    );
  }
</style>
