---
export interface Props {
  post: any;
}

import { Markdown } from 'astro/components';

import PostHeader from './PostHeader.astro';

const { post } = Astro.props;
---

<article
  class='group h-fit w-full md:h-[450px] bg-white border-2 border-zinc-200 backdrop-blur-lg drop-shadow-lg hover:drop-shadow-2xl rounded-md px-6 prose-sm mb-16 relative overflow-hidden'
>
  <a href={post.url}>
    <PostHeader date={post.frontmatter.createdAt} title={post.frontmatter.title}
    />

    <div class='hidden md:block md:prose-sm'>
      <Markdown>
        {post.astro.source}
      </Markdown>
    </div>

    <a
      href={post.url}
      class='hidden md:flex absolute h-2/3 w-full justify-center items-end bottom-0 left-0 z-10 bg-gradient-to-t from-white via-white/90 to-transparent'
    >
      <span
        class='backdrop-blur w-full text-center py-4 tracking-wide text-zinc-600 text-lg group-hover:underline group-hover:text-zinc-900 group-hover:scale-110'
        >Continue Reading
      </span>
    </a>
  </a>
</article>
