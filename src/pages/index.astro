---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon';
---

<Layout>
  <section class='mt-[48px] grid place-items-center relative'>
    <div
      class='border-2 border-zinc-400 rounded-sm max-w-[40ch] drop-shadow-xl fade-up'
    >
      <div class='relative bg-zinc-300'>
        <figure class='h-12 flex items-center'>
          <img
            class='w-24 aspect-square absolute top-[-3.5rem] left-2 border-2 rounded-sm border-white'
            src='/images/avatar_dark.webp'
            alt='picture of calin ennis'
          />
          <figcaption class='ml-24 pl-4 font-mono text-xl'>
            Calin Ennis
          </figcaption>
        </figure>
      </div>
      <div class='bg-white p-4 text-zinc-600'>
        <span class='inline-flex items-center'>
          <Icon class='h-6 w-6 mr-2' pack='ph' name='briefcase-light' />
          Occupation: Software Engineer
        </span>
        <span class='inline-flex items-center'>
          <Icon class='h-6 w-6 mr-2' pack='ion' name='md-globe' />
          Base of Operations: Atlanta, GA
        </span>
        <span class='inline-flex items-center'>
          <Icon class='h-6 w-6 mr-2' pack='system-uicons' name='document-stack'
          />
          Personnel File:&nbsp;
          <a
            class='bg-zinc-100 hover:bg-zinc-200 text-zinc-600 hover:underline hover:text-zinc-900 flex items-center px-2 rounded-lg hover:scale-105 active:bg-zinc-300'
            href='/resume.pdf'
            alt='calin ennis'
            resume'
            target='_blank'
            rel='noopener noreferrer'
            >Resume
            <Icon
              class='h-4 w-4 mt-[2px] ml-[2px]'
              pack='ei'
              name='external-link'
            />
          </a>
        </span>

        <p class='my-4 border-l-4 border-zinc-400 pl-2 italic'>
          Fullstack developer specializing in the front-end disciplines. Builds
          modern web experiences using JAMstack and Javascript. Gains charge
          from coffee and music.
        </p>
        <ul class='mt-6 flex flex-row justify-evenly'>
          <li
            class='h-8 w-8 grid place-items-center border-2 border-zinc-300 rounded-sm text-zinc-500 p-1 hover:bg-zinc-200 hover:text-zinc-900 hover:scale-110 active:bg-zinc-300'
          >
            <a href='https://twitter.com/calin_ennis' target='_blank'
              ><Icon
                class='h-full w-full'
                pack='teenyicons'
                name='twitter-outline'
              />
            </a>
          </li>
          <li
            class='h-8 w-8 grid place-items-center border-2 border-zinc-300 rounded-sm text-zinc-500 p-1 hover:bg-zinc-200 hover:text-zinc-900 hover:scale-110 active:bg-zinc-300'
          >
            <a href='https://github.com/C3nE3s' target='_blank'
              ><Icon
                class='h-full w-full'
                pack='teenyicons'
                name='github-outline'
              />
            </a>
          </li>
          <li
            class='h-8 w-8 grid place-items-center border-2 border-zinc-300 rounded-sm text-zinc-500 p-1 hover:bg-zinc-200 hover:text-zinc-900 hover:scale-110 active:bg-zinc-300'
          >
            <a href='https://www.linkedin.com/in/calinennis/' target='_blank'
              ><Icon class='h-full w-full' pack='ri' name='linkedin-line' />
            </a>
          </li>
          <li
            class='h-8 w-8 grid place-items-center border-2 border-zinc-300 rounded-sm text-zinc-500 p-1 hover:bg-zinc-200 hover:text-zinc-900 hover:scale-110 active:bg-zinc-300'
          >
            <a href='mailto: calinennis+siteinquiry@gmail.com' target='_blank'
              ><Icon
                class='h-full w-full'
                pack='teenyicons'
                name='envelope-outline'
              />
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>
</Layout>

<style>
  section {
    height: calc(100% - 48px);
  }

  .fade-up {
    animation: 200ms ease-out 0s 1 fadeUp;
  }

  @keyframes fadeUp {
    0% {
      opacity: 40%;
      transform: translateY(100%);
    }
    100% {
      opacity: 100%;
      transform: translateY(0);
    }
  }
</style>
